#main_screen
	width: 100%
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position center
	background-size: cover
#header
	padding: 23px 0 20px
	overflow hidden
	z-index: 9
	position relative
	border-bottom: 1px solid rgba(#FDFCFC, .2)
	margin-bottom: 57px
#logo
	float: left
	opacity .5
	// line-height: 16px
.contacts
	float: right
	text-align: right
	line-height  12px
	a
		font-size: 10px
		.fa
			color: #ffc729
			font-size: 18px
			margin: 0 15px 0  40px
			line-height: 12px
		.fa+span
			line-height: 12px
			font-size: 16px;
			font-family: "OpenSansRegular", sans-serif;
			color: rgba(#fff, .6)
			text-align: right;
			&:hover
				text-decoration underline
.tel:first-child
	.fa-phone
		margin-left: 0
#main_content
	.container
		position relative
.pre
	font-size: 27px;
	font-family: "OpenSansLight", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1.111;
	text-shadow: 0px 0px 32.4px rgba(0, 0, 0, 0.5);
h1
	font-size: 44px;
	color: rgb(255, 199, 41);
	line-height: 1.205;
	text-shadow: 0px 0px 32.4px rgba(0, 0, 0, 0.5);
	max-width: 914px;
	margin 29px 0 27px
	letter-spacing: -1.3px;
.main_icon
	display: inline-block
	height 21px
	background-image: url(../img/main_icons.png)
	background-repeat no-repeat
.main_icon_calendar
	width: 20px
	background-position 0 center
	margin-right: 20px;
.main_icon_horn
	width: 25px
	background-position -20px center
	margin-right 15px
.main_content_date
	font-size: 20px;
	font-family: "OpenSansBold", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 21px
	vertical-align: middle
	text-shadow: 0px 0px 32.4px rgba(0, 0, 0, 0.5);
	margin-bottom: 9px
	span
		font-family: "OpenSansLight", sans-serif;
.main_content_author
	font-size: 20px;
	font-family: "OpenSansLight",sans-serif;
	color: rgb(255, 255, 255);
	text-shadow: 0px 0px 32.4px rgba(0, 0, 0, 0.5);
.video_wrapper_main
	width: 463px
	margin 56px 0 65px
#tess_main
	position: absolute
	bottom: 0
	right -26px